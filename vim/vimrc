lang messages zh_CN.UTF-8 " è§£å†³consleè¾“å‡ºä¹±ç  
" lang messages en_Us.UTF-8 " è§£å†³consleè¾“å‡ºä¹±ç  

fun! ViewUTF8()
	set encoding=utf-8                                  
	set termencoding=big5
endfun

fun! UTF8()
	set encoding=utf-8                                  
	set termencoding=big5
	set fileencoding=utf-8
	set fileencodings=ucs-bom,big5,utf-8,latin1
endfun

fun! Big5()
	set encoding=big5
	set fileencoding=big5
endfun

